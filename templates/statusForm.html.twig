{# Send status form #}
<div class="write">
    <form method="post" action="">
        <div class="textarea fs16 c696">{{ 'write'|trans }}{{ form_widget(form.content, {'attr': {'class': 'ta fs16'}}) }}</div>
        <div class="footer">
            <ul class="footerMenu">
                {{ include('status/statusOption.html.twig') }}
                {{ include('status/statusDownload.html.twig') }}
                {{ include('status/statusColor.html.twig') }}
                {{ include('status/statusSize.html.twig') }}
                {{ include('status/statusFont.html.twig') }}
                {{ include('status/statusAccount.html.twig') }}
                <li class="menuChoices sendStatus">
                {{ form_widget(form.submit, {'attr': {'class': 'send'}, 'label': '<span id="sendArrow"><i class="fa fa-arrow-right fa-lg" aria-hidden="true"></i></span>'|raw}) }}
                {{ form_end(form) }}
                </li>
            </ul>
        </div>
    </form>
</div>
